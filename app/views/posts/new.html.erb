<h1>New Post</h1>

<div class="row">
    <%= form_for :post, url: posts_path do |f| %>
    <div class="row">
      <div class="small-6 large-3 columns">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="row">
      <div class="small-8 large-6 columns">
        <%= f.label :text %>
        <%= f.text_area :text %>

        <%= f.submit "Submit", class: "button" %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Index', posts_path %>
